<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ADDCE"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название животного" />

    <EditText
        android:id="@+id/etPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Количество пятнышек на попе (млн.)" />

    <EditText
        android:id="@+id/etRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Регион местообитания" />

    <EditText
        android:id="@+id/etAdditionalField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Количество особей, проживающих жизнь хиппи" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить хрюшу" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>